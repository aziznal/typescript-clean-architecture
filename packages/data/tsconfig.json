{
    "extends": "../../tsconfig.json",

    "include": ["src/**/*"],

    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],

    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",

        "module": "ES2020",
        "target": "ES2020",
        "moduleResolution": "node",

        "outDir": "build/",

        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,

        "plugins": [
            {
                "name": "@rollup/plugin-typescript"
            }
        ]
    }
}
