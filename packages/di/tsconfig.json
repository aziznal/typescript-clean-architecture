{
    "extends": "../../tsconfig.json",

    "include": ["src/**/*.ts"],

    "exclude": ["node_modules"],

    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",

        "module": "ES2020",
        "target": "ES2020",
        "moduleResolution": "node",

        "lib": ["ES6", "DOM"],

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,

        "outDir": "build/",

        "plugins": [
            {
                "name": "@rollup/plugin-typescript"
            }
        ]
    }
}
